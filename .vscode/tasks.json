      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Setup Complete",
      "dependsOn": [
        "Install Dependencies",
        "Generate Prisma",
        "Build"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
