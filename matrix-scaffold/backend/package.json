{
  "name": "matrix-platform",
  "version": "11.0.0",
  "description": "Matrix Platform v11 - Global Professional Edition",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "build:production": "tsc && npm run build:prisma",
    "build:prisma": "prisma generate",
    "start": "node dist/main.js",
    "start:production": "NODE_ENV=production node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "test": "jest",
    "test:smoke": "tsx scripts/smoke-tests.ts",
    "test:load": "tsx scripts/load-tests.ts",
    "test:regression": "tsx scripts/regression-tests.ts",
    "test:security": "tsx scripts/security-tests.ts",
    "test:production": "npm run test:smoke && npm run test:load && npm run test:regression",
    "lint": "eslint src --ext .ts",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "generate": "prisma generate"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@prisma/client": "^5.7.0",
    "fastify": "^4.24.0",
    "nanoid": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
