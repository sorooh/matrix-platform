{
  "name": "matrix-platform",
  "version": "11.0.0",
  "description": "Matrix Platform v11 - Global Professional Edition",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "build:production": "npm run build && npm run build:prisma && npm run validate",
    "build:prisma": "prisma generate",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "start": "node dist/main.js",
    "start:production": "cross-env NODE_ENV=production node dist/main.js",
    "start:cluster": "node dist/cluster.js",
    "dev": "tsx watch --clear-screen=false src/main.ts",
    "dev:debug": "tsx watch --inspect src/main.ts",
    "dev:hot": "nodemon --exec tsx src/main.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:smoke": "tsx scripts/smoke-tests.ts",
    "test:load": "tsx scripts/load-tests.ts",
    "test:regression": "tsx scripts/regression-tests.ts",
    "test:security": "tsx scripts/security-tests.ts",
    "test:production": "npm run test:smoke && npm run test:load && npm run test:regression",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json}\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint:check && npm run typecheck && npm run test",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "migrate:status": "prisma migrate status",
    "generate": "prisma generate",
    "db:seed": "tsx scripts/seed.ts",
    "db:studio": "prisma studio",
    "setup": "npm install && npm run generate && npm run build",
    "setup:dev": "npm install && npm run generate",
    "health": "curl http://localhost:3000/health",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@prisma/client": "^5.7.0",
    "@sentry/node": "^7.0.0",
    "@sentry/profiling-node": "^1.0.0",
    "@aws-sdk/client-s3": "^3.926.0",
    "@aws-sdk/s3-request-presigner": "^3.926.0",
    "@slack/webhook": "^7.0.6",
    "openai": "^4.0.0",
    "@anthropic-ai/sdk": "^0.9.0",
    "@google/generative-ai": "^0.1.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.0",
    "ioredis": "^5.3.2",
    "nanoid": "^5.0.0",
    "winston": "^3.11.0",
    "pg": "^8.16.3",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cross-env": "^7.0.3",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.7.0",
    "bull": "^4.0.0",
    "uuid": "^9.0.0",
    "pino": "^8.0.0",
    "pino-pretty": "^10.0.0",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "compression": "^1.7.0",
    "morgan": "^1.10.0",
    "prom-client": "^15.0.0",
    "puppeteer": "^21.0.0",
    "cheerio": "^1.0.0",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
