# Matrix Platform Backend Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# JWT Authentication
JWT_SECRET=matrix-platform-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES=30d

# Cookie Configuration
COOKIE_SECRET=matrix-platform-cookie-secret-change-in-production

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Database Configuration (when integrated)
# DATABASE_URL=postgresql://username:password@localhost:5432/matrix_platform
# REDIS_URL=redis://localhost:6379

# AWS S3 Configuration (optional)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=matrix-platform-storage
# SNAPSHOT_S3_BUCKET=matrix-platform-snapshots

# Email Configuration (for password reset)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@matrix-platform.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Security
BCRYPT_ROUNDS=12
PASSWORD_RESET_EXPIRES=15

# Features Flags
ENABLE_2FA=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_METRICS=true

# External APIs
# OPENAI_API_KEY=your-openai-key
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret