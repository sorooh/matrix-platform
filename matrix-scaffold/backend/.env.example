# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/matrix?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Region Configuration
REGION="us-east-1"
NODE_ENV="development"

# API Keys
OPENAI_API_KEY="your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here-min-32-chars"

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET="your-s3-bucket-name"
SNAPSHOT_S3_BUCKET="your-snapshot-s3-bucket-name"

# CDN Configuration (Optional)
CDN_URL="https://cdn.matrix-platform.com"
CDN_DOMAIN="cdn.matrix-platform.com"

# Sentry Configuration (Optional)
SENTRY_DSN="your-sentry-dsn-here"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"

# Logging
LOG_LEVEL="info"

# Encryption
ENCRYPTION_KEY="your-encryption-key-32-chars-hex"
ENCRYPTION_IV="your-encryption-iv-16-chars-hex"

# GitHub Integration (Optional)
GITHUB_TOKEN="your-github-token"
GITHUB_OWNER="your-github-owner"
GITHUB_REPO="your-github-repo"
GITHUB_PR_NUMBER=""

# Slack Integration (Optional)
SLACK_WEBHOOK_URL="your-slack-webhook-url"

# Vector Provider
VECTOR_PROVIDER="openai"
VECTOR_HTTP_URL=""

# AI Agents
ENABLE_AI="true"

# API Configuration
API_URL="http://localhost:3000"
PORT="3000"

